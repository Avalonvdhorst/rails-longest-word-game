<div class="mainclass">
  <h1>New Game</h1>
    <div class="displaybox">
    <% @letters.each do |letter| %>
      <h3 class="letterbox"> <%= letter %></h3>
    <% end %>
  </div>

  <div class="form">
    <h3>What is the longest word you can find?</h1>
  <form action="/score" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input type="text" name="word" placeholder="Type your word">
      <input type="submit" value="Play!">
    </form>
  </div>
</div>

